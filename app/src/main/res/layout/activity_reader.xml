<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.endarpine.cahqr.reader">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_readCodeText" />

    <CheckBox
        android:text="@string/checkBox_textVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/checkBox_textVisibility"
        android:layout_below="@+id/textView_readCodeText"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:onClick="setVisibility"
        />

    <CheckBox
        android:text="@string/checkBox_soundAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_textVisibility"
        android:layout_centerHorizontal="true"
        android:id="@+id/checkBox_soundAvailable"
        android:onClick="setReadOutLoud"/>

    <Button
        android:text="@string/button_repeatReadingOutLoud"
        android:layout_width="wrap_content"
        android:id="@+id/button_repeatReadingOutLoud"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:onClick="setReadOutLoud (reader)" />
</RelativeLayout>
